@page "/home2"
@layout EmptyLayout
@inject NavigationManager navManager
@inject IModalService modal

<head>
	<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
	<style>
		body {
			font-family: 'Poppins';
			font-size: 20px;
			color: #513322;
		}
	</style>
</head>
<body>
	<div class="encabezado">
		<div class="logoTalegas" @onclick="clickButtonToHome">Talegas</div>
		<div class="navegador">
			<ul>
				<NavLink href="home" style="color: #513322"><li>Inicio</li></NavLink>
				<NavLink href="catalog" style="color: #513322"><li>Catálogo</li></NavLink>
				<NavLink href="" style="color: #513322"><li>Nosotros</li></NavLink>
				<NavLink href="" style="color: #513322"><li>Contáctanos</li></NavLink>
			</ul>
		</div>
		<div class="navUsuario">
			<i class="fa-regular fa-user fa-sm"></i> <a style="margin-left: 5px;">Hola, <strong>Lina</strong></a>
			<i class="fa-regular fa-heart fa-sm"></i>
			<i class="fa-solid fa-cart-shopping fa-sm"></i>
		</div>
	</div>
	<div class="principalHome">
		<img src="../images/fondo_home.png" alt="" style="width: 100%; height: 100%"/>
		<div class="textoMainHome"> 
			<div style="font-weight:500; font-size: 20px;">Colores cálidos para días de verano</div>
			<div style="font-weight:800; font-size: 85px; line-height: 85px">DISPONIBLES</div><br />
			<button class="compraYaHome" @onclick="clickButtonToCatalog">COMPRA YA</button>
		</div>
	</div>
</body>

@code {
	private void clickButtonToCatalog()
	{
		navManager.NavigateTo("/catalog");
	}

	private void clickButtonToHome()
	{
		navManager.NavigateTo("/home");
	}
}
